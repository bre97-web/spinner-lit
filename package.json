{
  "name": "spinner-lit",
  "version": "0.0.1",
  "author": "bre97-npm",
  "description": "A simple spinner(loading) web component, build with Lit.",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/bre97-web/spinner-lit.git"
  },
  "bugs": {
    "url": "https://github.com/bre97-web/spinner-lit/issues"
  },
  "homepage": "https://github.com/bre97-web/spinner-lit",
  "keywords": [
    "loading",
    "spinner",
    "component"
  ],
  "scripts": {
    "build": "wireit",
    "build:ts": "wireit",
    "build:css-to-ts": "wireit",
    "css": "node ./config/css-to-ts.js",
    "ts": "tsc --pretty",
    "test": "exit 0",
    "test:demo": "npx web-dev-server --open /demo/ --node-resolve",
    "dev": "vite",
    "build:demo": "tsc && vite build",
    "publish:npm": "node ./config/publish-to-npm.js && npm run format:json",
    "publish:gpk": "node ./config/publish-to-gpk.js && npm run format:json",
    "format:json": "npx prettier --write package.json"
  },
  "type": "module",
  "files": [
    "**/*.js",
    "**/*.js.map",
    "**/*.d.ts",
    "!config/**",
    "!docs/**",
    "!vite.config.ts",
    "!demo/**",
    "!**/test/**",
    "!**/testing/**",
    "!**/*_test.*",
    "!.wireit/**"
  ],
  "dependencies": {
    "lit": "^2.8.0",
    "prettier": "^3.0.1",
    "tslib": "^2.6.1"
  },
  "devDependencies": {
    "@web/dev-server": "^0.3.0",
    "express": "^4.18.2",
    "glob": "^10.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "wireit": "^0.10.0"
  },
  "wireit": {
    "build": {
      "dependencies": [
        "build:ts"
      ]
    },
    "build:ts": {
      "command": "node css-to-ts.js && tsc --pretty",
      "files": [
        "tsconfig.json",
        "**/*.ts",
        "!config/**",
        "!**.config.ts",
        "!**/*.d.ts",
        "!**/*.css.ts",
        "!catalog"
      ],
      "output": [
        ".tsbuildinfo",
        "**/*.js",
        "**/*.js.map",
        "**/*.d.ts",
        "!css-to-ts.js",
        "!web-test-runner.config.js",
        "!types/",
        "!catalog"
      ],
      "clean": "if-file-deleted"
    },
    "build:css-to-ts": {
      "command": "node css-to-ts.js",
      "files": [
        "css-to-ts.js"
      ],
      "output": [
        "**/*.css.ts",
        "!catalog",
        "demo/**/*"
      ],
      "clean": "if-file-deleted"
    }
  }
}
